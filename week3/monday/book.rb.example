class Book
  
  def title
    @title
  end
  
  def title=(title_var)
    @title = title_var
  end
  
  def author
    @author
  end
  
  def author=(author_var)
    @author = author_var
  end

  def category
    @category
  end
  
  def category=(category_var)
    @category = category_var
  end
  
end